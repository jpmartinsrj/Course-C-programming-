#include <stdio.h>

/*
Tipos de Dados

- > Tipos Numéricos:
- Inteiros;
- Reais;
*/

int main(){
	//Inteiro
	//int nota1, nota2; //7, 890,...

	//Reais
	float media, nota1, nota2; //23.4, 1.23,...
	//double outra_media; //23.4, 1.23,... Suporta uma quantidade maior de dados.

	printf("Qual a primeira nota? ");
	scanf("%f", &nota1);
	
	printf("Qual a segunda nota? ");
	scanf("%f", &nota2);

	media = (nota1 + nota2)/2;

	printf("\\nSua média é %.2f", media);
	
	return 0;
}
